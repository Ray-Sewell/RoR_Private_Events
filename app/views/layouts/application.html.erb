<!DOCTYPE html>
<html>
  <head>
    <title>Events</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar is-danger" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <div class="navbar-item">
          <%= link_to "Eventure", root_path, class:"title has-text-white is-size-2"%>
        </div>
      </div>
      <div class="navbar-menu">
        <div class="navbar-start">
          <% if session[:user] %>
            <div class="navbar-item">
            </div>
            <div class="navbar-item">
              <%= link_to session[:user]["name"], "/users/" + session[:user]["id"].to_s, class:"is-size-5 has-text-white"%>
            </div>
            <div class="navbar-item">
              <%= link_to 'New Event', new_event_path, class:"button is-link" %>
            </div>
          <% end %>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <% if session[:user] %>
              <%= link_to "Change user", new_user_path, class:"is-size-5 has-text-white"%>
            <% else %>
              <%= link_to "Log in", new_user_path, class:"is-size-5 has-text-white"%>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <div class="level-item">
      <div class="column is-half">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
