<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class:"label" %>
    <%= form.text_field :name, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :location, class:"label" %>
    <%= form.text_field :location, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :description, class:"label" %>
    <%= form.text_field :description, class:"textarea" %>
  </div>

  <div class="field">
    <%= form.label :time, class:"label" %>
    <%= form.datetime_select :time %>
  </div>

  <div class="block"></div>
  
  <div class="actions has-text-centered">
    <%= form.submit "Create Event", class:"button is-success" %>
  </div>
<% end %>
