<div class="block"></div>
<div class="block level-item">
  <p class="title"><%= @event.name %></p>
</div>


<div class="block level-item">
  <div class="column is-three-quarters">
    <div class="columns">
      <div class="column is-half">
        <div class="card">
          <div class="card-content">
            <p class="subtitle"><%= @event.location %></p><br>
            <p><%= @event.description%></p>
            <% if @user == @event.creator %>
              <br>
              <div class="level-item">
                <%= render "event_attendees/create" %>
              </div>
            <% end %>
          </div>
          <footer class="card-footer">
            <p class="card-footer-item"><%= @event.time.to_formatted_s(:long_ordinal)%></p>
            <%= link_to @event.creator.name, @event.creator, class:"card-footer-item"%>
          </footer>
        </div>
      </div>
      <div class="column is-half">
        <%= render "invited" %>
      </div>
    </div>
  </div>
</div>